<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_agenda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.iff.a2.a2016.petapp.Agenda">

    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="175dp"
        android:id="@+id/data"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:text="16:00 horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h16"
        android:layout_below="@+id/h15"
        android:layout_alignStart="@+id/h15"
        android:layout_marginTop="21dp" />

    <RadioButton
        android:text="15:00 horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h15"
        android:layout_below="@+id/h14"
        android:layout_alignStart="@+id/data"
        android:layout_marginTop="10dp" />

    <RadioButton
        android:text="14:00 horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h14"
        android:layout_marginTop="49dp"
        android:layout_alignTop="@+id/h9"
        android:layout_alignStart="@+id/h15" />

    <RadioButton
        android:text="09:00 horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="134dp"
        android:id="@+id/h9"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/data" />

    <CheckBox
        android:text="Dog Taxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/h9"
        android:layout_alignParentEnd="true"
        android:id="@+id/dogtaxi" />

    <Button
        android:text="Agendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/Agendar" />

</RelativeLayout>
